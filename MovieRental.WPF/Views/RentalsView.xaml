<UserControl x:Class="MovieRental.WPF.Views.RentalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MovieRental.WPF.ViewModels"
             xmlns:local="clr-namespace:MovieRental.WPF.Views">
    <UserControl.DataContext>
        <vm:RentalsViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20">

        <!-- Form Section -->
        <TextBlock Text="Add New Rental" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Customer:" Width="60" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Customers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedCustomer}" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="DaysRented:" Width="70" VerticalAlignment="Center"/>
            <TextBox Text="{Binding DaysRented, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Movie:" Width="50" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Movies}" DisplayMemberPath="Title" SelectedItem="{Binding SelectedMovie}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="PaymentMethod:" Width="100" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding PaymentMethods}" SelectedItem="{Binding SelectedPaymentMethod}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10"> 
            <TextBlock Text="PaymentValue:" Width="90" VerticalAlignment="Center"/>
            <TextBox Text="{Binding PaymentValue, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
        </StackPanel>
        
        <Button Content="Save" Command="{Binding SaveCommand}" Width="100"/>
        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,10,0,0"/>

        <Separator Margin="0,20,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Customer:" Width="90" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CustomerToSearch, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
        </StackPanel>
        <Button Content="Search" Command="{Binding SearchCommand}" Width="100"/>

        <!-- List Section -->
        <TextBlock Text="Rentals" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListView ItemsSource="{Binding Rentals}" Height="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="150"/>
                    <GridViewColumn Header="DaysRented" DisplayMemberBinding="{Binding DaysRented}" Width="200"/>
                    <GridViewColumn Header="MovieTitle" DisplayMemberBinding="{Binding Movie.Title}" Width="200"/>
                    <GridViewColumn Header="PaymentMethod" DisplayMemberBinding="{Binding PaymentMethod}" Width="200"/>
                    <GridViewColumn Header="PaymentValue" DisplayMemberBinding="{Binding PaymentValue}" Width="200"/>
                    <GridViewColumn Header="CustomerName" DisplayMemberBinding="{Binding Customer.Name}" Width="200"/>
                    <GridViewColumn Header="CustomerEmail" DisplayMemberBinding="{Binding Customer.Email}" Width="200"/>
                    <GridViewColumn Header="CustomerPhone" DisplayMemberBinding="{Binding Customer.Phone}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
