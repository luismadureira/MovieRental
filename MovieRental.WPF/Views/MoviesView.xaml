<UserControl x:Class="MovieRental.WPF.Views.MoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MovieRental.WPF.ViewModels"
             xmlns:local="clr-namespace:MovieRental.WPF.Views">
    
    <!-- DataContext -->
    <UserControl.DataContext>
        <vm:MoviesViewModel />
    </UserControl.DataContext>

    <!-- Resources -->
    <UserControl.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="StatusMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="25">

            <!-- Form Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Add New Movie" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Title Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Title:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Action Button -->
                    <Button Content="Save Movie" 
                            Command="{Binding SaveCommand}" 
                            Width="120" 
                            Height="35"
                            Background="DarkOrange"
                            Foreground="White"
                            FontWeight="Medium"/>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource StatusMessageStyle}"/>
                </StackPanel>
            </Border>

            <!-- Movies List Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="20">
                <StackPanel>
                    <TextBlock Text="Movie Library" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <ListView ItemsSource="{Binding Movies}" Height="350" BorderBrush="Gray" BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="80">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="GridViewColumnHeader">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Background" Value="LightCoral"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="Movie Title" DisplayMemberBinding="{Binding Title}" Width="400">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="GridViewColumnHeader">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Background" Value="LightCoral"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
