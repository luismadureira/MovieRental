<UserControl x:Class="MovieRental.WPF.Views.MoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MovieRental.WPF.ViewModels"
             xmlns:local="clr-namespace:MovieRental.WPF.Views">
    <UserControl.DataContext>
        <vm:MoviesViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20">

        <!-- Form Section -->
        <TextBlock Text="Add New Movie" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Title:" Width="50" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <Button Content="Save" Command="{Binding SaveCommand}" Width="100"/>
        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,10,0,0"/>

        <Separator Margin="0,20,0,10"/>

        <!-- List Section -->
        <TextBlock Text="Movies" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListView ItemsSource="{Binding Movies}" Height="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="150"/>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
