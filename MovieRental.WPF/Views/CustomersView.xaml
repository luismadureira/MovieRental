<UserControl x:Class="MovieRental.WPF.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MovieRental.WPF.ViewModels"
             xmlns:local="clr-namespace:MovieRental.WPF.Views">
    
    <!-- DataContext -->
    <UserControl.DataContext>
        <vm:CustomersViewModel />
    </UserControl.DataContext>

    <!-- Resources -->
    <UserControl.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="StatusMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="25">

            <!-- Form Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Add New Customer" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Name Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Name:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Email Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Email:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Phone Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Phone:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Action Button -->
                    <Button Content="Save Customer" 
                            Command="{Binding SaveCommand}" 
                            Width="120" 
                            Height="35"
                            Background="DodgerBlue"
                            Foreground="White"
                            FontWeight="Medium"/>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource StatusMessageStyle}"/>
                </StackPanel>
            </Border>

            <!-- Customers List Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="20">
                <StackPanel>
                    <TextBlock Text="Customer Directory" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <ListView ItemsSource="{Binding Customers}" Height="300" BorderBrush="Gray" BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="180"/>
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="220"/>
                                <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}" Width="160"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
