<UserControl x:Class="MovieRental.WPF.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MovieRental.WPF.ViewModels"
             xmlns:local="clr-namespace:MovieRental.WPF.Views">
    <UserControl.DataContext>
        <vm:CustomersViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20">

        <!-- Form Section -->
        <TextBlock Text="Add New Customer" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Name:" Width="50" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Email:" Width="50" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Phone:" Width="50" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <Button Content="Save" Command="{Binding SaveCommand}" Width="100"/>
        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,10,0,0"/>

        <Separator Margin="0,20,0,10"/>

        <!-- List Section -->
        <TextBlock Text="Customers" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListView ItemsSource="{Binding Customers}" Height="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="150"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                    <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
