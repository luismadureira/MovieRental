<Window x:Class="MovieRental.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental.WPF.ViewModels"
        xmlns:views="clr-namespace:MovieRental.WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Customers View" Command="{Binding OpenCustomersViewCommand}" />
                <MenuItem Header="Open Movies View" Command="{Binding OpenMoviesViewCommand}" />
                <MenuItem Header="Open Rentals View" Command="{Binding OpenRentalsViewCommand}" />
                <Separator />
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <!-- Content area for dynamic views -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>